  process.env.OPENAI_API_KEY = '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';
